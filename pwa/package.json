{
  "name": "erstizeitung-pwa",
  "version": "1.0.0",
  "private": true,
  "description": "PWA implementation for Erstizeitung BCG GitBook",
  "author": "Fachschaft BCG - UniversitÃ¤t Bayreuth",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.1"
  },
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc -p tsconfig.json",
    "build:browser": "tsc -p tsconfig.browser.json",
    "test": "npm run build && vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:ui": "vitest --ui --config vitest.config.ts",
    "test:coverage": "npm run build && vitest run --coverage --config vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "clean": "rm -rf dist/",
    "generate-icons": "pwa-assets-generator",
    "serve": "serve ../_book -p 3000",
    "serve:dev": "serve ../_book -p 3000 --no-clipboard",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "cheerio": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vite-pwa/assets-generator": "^1.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "fuse.js": "^7.1.0",
    "happy-dom": "^19.0.2",
    "prettier": "^3.6.2",
    "serve": "^14.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fsbcg-ubt/erstizeitung.git"
  }
}
